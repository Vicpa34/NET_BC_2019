@model SludinajumsModel
@{
    ViewData["Title"] = "Sludinajums";
}

<h2>Sludinajums</h2>
<form class="form-horizontal" action="Sludinājumi" method="post">
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Kategorija</label>
        <select class="form-control">
            <option>--Izvēleties kategoriju </option>
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
        </select>
    </div>

    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Cena</label>
        <div class="col-sm-10">
           
            <input asp-for="Price" class="form-control" id="inputEmail3" placeholder="Cena">
        </div>
    </div>

    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Atrasanās vieta</label>
        <div class="col-sm-10">
            <input asp-for="Place"  id="inputEmail3" placeholder="Atrašānas vieta">
           
        </div>
    </div>

    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Tālrunis</label>
        <div class="col-sm-10">
            <input asp-for="Phone"  class="form-control" id="inputEmail3" placeholder="Tālrunis">
            
        </div>
    </div>

    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">E-pasts</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" id="inputEmail3" placeholder="E-pasts">           
             
        </div>
    </div>

    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Apraksts</label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" id="inputEmail3" placeholder="Apraksts">
            
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Saglabāt sludinājumu</button>
        </div>
    </div>
</form>

