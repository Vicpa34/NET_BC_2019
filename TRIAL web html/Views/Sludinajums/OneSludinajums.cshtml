@model SludinajumsModel
@{
    ViewData["Title"] = "OneSludinajums";
}

<h2>Sludinajums</h2>



<div class="row">
    <div class="col-md-4">
        <div class="row">
            <div class="col-md-12 text-center">
                <img src="@Model.Photo" class="img-rounded" />
            </div>
        </div>
        <br />
        <div class="row">
            @for (int i = 0; i < 3; i++)
            {
                <div class="col-md-4">
                    <img src="@Model.Photo" class="img-rounded img-responsive" />
                </div>
            }
        </div>
    </div>
    <div class="col-md-8">
        <div class="form-group clearfix">
            <label class="col-md-4 control-label">Cena:</label>
            <div class="col-md-8">
                @String.Format("EUR {0:0.00}", Model.Price)
            </div>
        </div>
        <div class="form-group clearfix">
            <label class="col-md-4 control-label">Atrašanās vieta:</label>
            <div class="col-md-8">
                @Model.Place
            </div>
        </div>
        
        <div class="form-group clearfix">
            <label class="col-md-4 control-label">Tālrunis:</label>
            <div class="col-md-8">
                @Model.Phone
            </div>
        </div>
        <div class="form-group clearfix">
            <label class="col-md-4 control-label">E-pasts:</label>
            <div class="col-md-8">
                @Model.Email
            </div>
        </div>
        <div class="form-group clearfix">
            <label class="col-md-4 control-label">Apraksts:</label>
            <div class="col-md-8">
                @Model.Description
            </div>
        </div>
    </div>
</div>