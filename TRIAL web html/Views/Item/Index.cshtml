@model List<TRIALLogic.Category>


@{
    ViewData["Title"] = "Items";
}

<h2>Items</h2>

<div class="row">
    @foreach (var cat in Model.Where(c => !c.CategoryId.HasValue))
    {
        <div class="col-md-3 col-sm-6">
            <div class="list-group">
                <a href="#" class="list-group-item active">
                    @cat.Title
                </a>
                @foreach (var subcat in Model.Where(c => c.CategoryId == cat.Id))
                {
                    <a asp-controller="Item" asp-action="Index" asp-route-id="@subcat.Id" class="list-group-item">@subcat.Title</a>
                }
            </div>
        </div>
    }
</div>

